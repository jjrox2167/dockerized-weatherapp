
FROM node:18-slim

WORKDIR /app

COPY .env.local .env.local

COPY package*.json ./

RUN npm install

COPY . .

RUN npm run build  // Running the build command to prepare the Next.js application

EXPOSE 3000

CMD ["npm", "start"]

RUN npm run build  // Running the build command to prepare the Next.js application

EXPOSE 3000

CMD ["npm", "start"]